<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/add_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="4dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textSize="28sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/subtract_button"
        android:backgroundTint="?attr/primary_operator_button"
        android:text="+" />

    <Button
        android:id="@+id/subtract_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="4dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textSize="28sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/add_button"
        app:layout_constraintRight_toLeftOf="@id/multiply_button"
        android:backgroundTint="?attr/primary_operator_button"
        android:text="−" />

    <Button
        android:id="@+id/multiply_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="4dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textSize="28sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/subtract_button"
        app:layout_constraintRight_toLeftOf="@id/divide_button"
        android:backgroundTint="?attr/primary_operator_button"
        android:text="×"/>
    <Button
        android:id="@+id/divide_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="4dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textSize="28sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/multiply_button"
        app:layout_constraintRight_toLeftOf="@id/flip_button"
        android:backgroundTint="?attr/primary_operator_button"
        android:text="÷"/>

    <Button
        android:id="@+id/flip_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="4dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textSize="8sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/divide_button"
        app:layout_constraintRight_toLeftOf="@id/clear_unit_button"
        android:backgroundTint="?attr/secondary_operator_button"
        android:text="FLIP" />
    <Button
        android:id="@+id/clear_unit_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:textSize="8sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/flip_button"
        app:layout_constraintRight_toRightOf="parent"
        android:backgroundTint="?attr/secondary_operator_button"
        android:text="CLR UNIT" />

</androidx.constraintlayout.widget.ConstraintLayout>